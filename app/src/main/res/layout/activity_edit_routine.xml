<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Routine.EditRoutineActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:layout_gravity="center"
                    android:text="루틴 수정"
                    android:textColor="@color/Standard"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/dayOfWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="38dp"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/sun"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="7.5dp"
                        android:background="@drawable/selector_dayofweek_button"
                        android:textColor="@drawable/selector_dayofweek_text"
                        android:button="@null"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:text="일"/>

                    <RadioButton
                        android:id="@+id/mon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="7.5dp"
                        android:background="@drawable/selector_dayofweek_button"
                        android:textColor="@drawable/selector_dayofweek_text"
                        android:button="@null"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:text="월"/>

                    <RadioButton
                        android:id="@+id/tue"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="7.5dp"
                        android:background="@drawable/selector_dayofweek_button"
                        android:textColor="@drawable/selector_dayofweek_text"
                        android:button="@null"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:text="화"/>

                    <RadioButton
                        android:id="@+id/wed"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="7.5dp"
                        android:background="@drawable/selector_dayofweek_button"
                        android:textColor="@drawable/selector_dayofweek_text"
                        android:button="@null"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:text="수"/>

                    <RadioButton
                        android:id="@+id/thu"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="7.5dp"
                        android:background="@drawable/selector_dayofweek_button"
                        android:textColor="@drawable/selector_dayofweek_text"
                        android:button="@null"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:text="목"/>

                    <RadioButton
                        android:id="@+id/fri"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="7.5dp"
                        android:background="@drawable/selector_dayofweek_button"
                        android:textColor="@drawable/selector_dayofweek_text"
                        android:button="@null"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:text="금"/>

                    <RadioButton
                        android:id="@+id/sat"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="7.5dp"
                        android:background="@drawable/selector_dayofweek_button"
                        android:textColor="@drawable/selector_dayofweek_text"
                        android:button="@null"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:text="토"/>

                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 운동 시간"
                        android:textColor="@color/Subtitle" />

                    <TextView
                        android:id="@+id/runTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="0분"
                        android:textColor="@color/Standard"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="33dp"
                        android:layout_marginBottom="48dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="44dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/startTimeUP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/round_button_background_1"
                                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                                app:tint="@color/Subtitle"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:text="시작 시간"
                                android:textColor="@color/Subtitle"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/startTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="오전 12:00"
                                android:textStyle="bold"
                                android:textColor="@color/Standard"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/startTimeDown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_gravity="center"
                                android:background="@drawable/round_button_background_1"
                                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                                app:tint="@color/Subtitle"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="44dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/endTimeUP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/round_button_background_1"
                                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                                app:tint="@color/Subtitle"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="13dp"
                                android:text="종료 시간"
                                android:textColor="@color/Subtitle"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/endTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="오전 12:00"
                                android:textStyle="bold"
                                android:textColor="@color/Standard"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/endTimeDown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_gravity="center"
                                android:background="@drawable/round_button_background_1"
                                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                                app:tint="@color/Subtitle"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="16dp"
                android:background="@color/white">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/adapter_exercise_input"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/addExercises"
                    android:layout_width="77dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="#E3E8EF"
                        android:text="+ 추가하기"
                        android:textSize="12sp"
                        android:textColor="#4A5567"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/completeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="58dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@color/Signature"
                        android:text="수정하기"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>