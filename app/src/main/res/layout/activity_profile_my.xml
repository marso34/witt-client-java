<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingLeft="17dp"
                    android:text="내 정보"
                    android:textSize="25sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/PEdit"
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="#00000000"
                    android:text="수정하기"
                    android:textColor="@color/silver"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ProfileImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/circle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="19sp"
                android:orientation="horizontal">

                <!--                백그라운드, 색상 등등 수정 필요-->
                <TextView
                    android:id="@+id/gender"
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgray"
                    android:text="남자"
                    android:textColor="#0080ff" />

                <TextView
                    android:id="@+id/name"
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text="김건우" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle"
                android:elevation="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MapImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="19dp"
                    android:src="@drawable/ic_baseline_place_24" />

                <TextView
                    android:id="@+id/MyLocation"
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="부안군 부안읍" />

                <TextView
                    android:id="@+id/MyHealthPlace"
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ㆍMK헬스장" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp">

                <TableRow android:paddingVertical="13dp">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="키" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/Pheight"
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="178cm"
                        android:textColor="@color/silver" />
                </TableRow>

                <TableRow android:paddingVertical="13dp">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="몸무게" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/Pweight"
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="69kg"
                        android:textColor="@color/silver" />
                </TableRow>

                <TableRow android:paddingVertical="13dp">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위트 점수" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/WScore"
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="100"
                        android:textColor="@color/default_color" />

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="점"
                        android:textColor="@color/silver" />

                </TableRow>

                <!--                여기까지 묶어야할 배경이 있음-->


            </TableLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:elevation="5dp">

                <TableRow
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="3">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="스쿼트"
                        android:textAlignment="center"
                        android:textColor="@color/silver" />

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="벤치프레스"
                        android:textAlignment="center"
                        android:textColor="@color/silver" />


                    <TextView
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="데드리프트"
                        android:textAlignment="center"
                        android:textColor="@color/silver" />
                </TableRow>

                <TableRow
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60"
                        android:textAlignment="center" />

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="40"
                        android:textAlignment="center" />


                    <TextView
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="55"
                        android:textAlignment="center" />
                </TableRow>


            </TableLayout>

            <!--            받은 평가, 받은 후기 들어갈 자리-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="4sp"
                    android:text="위트내역"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/WittHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="4sp"
                    android:text="차단목록"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="4sp"
                    android:text="설정"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
            </LinearLayout>

            <!--        탈퇴하기 자리-->




            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/WittBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom|center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/default_layout"
        android:text="위트 보내기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold">

    </Button>
</FrameLayout>