<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exerciseCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="14dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/listCatLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/listCat"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="부위"
                android:textSize="18sp"
                android:textColor="@color/Standard"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/exerciseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="36dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="25dp" >

                    <TextView
                        android:id="@+id/exerciseCat"
                        android:layout_height="20dp"
                        android:layout_width="36dp"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#000000"
                        android:textColor="#ffffff"
                        android:text="부위"
                        android:textSize="11sp"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/exerciseName"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:text="운동 이름"
                    android:textColor="@color/Standard"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/checkbox"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/round_button_bg_1"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/checked"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/round_button_green"
                        android:src="@drawable/ic_baseline_check_24"
                        app:tint="@color/white"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/exerciseDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginLeft="52dp"
                android:text="-kg · -회 · -세트"
                android:textSize="12sp"
                android:textColor="@color/Subtitle"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>


