<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ERRecordingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="44dp"
            android:paddingBottom="20dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/rounded_bottom">

            <LinearLayout
                android:id="@+id/stopWatch"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="22dp"
                    android:paddingTop="22dp"
                    android:paddingBottom="21dp">

                    <TextView
                        android:id="@+id/runTimeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="운동 시간"
                        android:textColor="@color/Background_3"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/runTimeView"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="00:00:00"
                        android:textColor="@color/Background_3"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="22dp"
                    android:paddingTop="21dp"
                    android:paddingBottom="22dp">

                    <TextView
                        android:id="@+id/restTimeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="휴식 시간"
                        android:textColor="@color/Background_3"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/restTimeView"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="00:00:00"
                        android:textColor="@color/Background_3"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingTop="6dp"
            android:paddingHorizontal="16dp"
            android:paddingBottom="200dp"
            tools:listitem="@layout/adapter_exercise"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_gradient_background_1">

        <androidx.cardview.widget.CardView
            android:id="@+id/stopBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="58dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/stopTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Background_2"
                android:gravity="center"
                android:text="완료하기"
                android:textColor="@color/Background_3"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>