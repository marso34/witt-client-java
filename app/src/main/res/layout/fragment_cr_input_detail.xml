<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".Routine.CRInputDetailFragment">

<!-- TODO: Update blank fragment layout -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:paddingBottom="330dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="44dp"
                android:text="초기화"
                android:textColor="@color/Subtitle"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="운동을 설정해주세요"
                android:textColor="@color/Standard"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="월요일 · 오전 12:00 - 오전 12:00"
                android:textColor="@color/Subtitle"
                android:textSize="12sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:clipToPadding="false"
                tools:listitem="@layout/adapter_exercise_input"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bg_gradient_white">

        <androidx.cardview.widget.CardView
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="58dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/nextTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Background_2"
                android:gravity="center"
                android:text="추가하기"
                android:textColor="@color/Background_3"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>